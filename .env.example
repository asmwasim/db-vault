# ──────────────────────── Database ────────────────────────
# DB_VAULT_DB_TYPE=postgres           # postgres | mysql | mongodb | sqlite
# DB_VAULT_DB_HOST=localhost
# DB_VAULT_DB_PORT=5432
# DB_VAULT_DB_USERNAME=backup_user
# DB_VAULT_DB_PASSWORD=supersecret
# DB_VAULT_DB_NAME=my_database
# DB_VAULT_DB_SSL=false

# ──────────────────────── Storage ────────────────────────
# DB_VAULT_STORAGE_TYPE=local          # local | s3
# DB_VAULT_STORAGE_LOCAL_PATH=./backups

# ──────────────── AWS S3 (optional) ──────────────────────
# DB_VAULT_S3_BUCKET=my-backup-bucket
# DB_VAULT_S3_PREFIX=db-vault/
# DB_VAULT_S3_REGION=us-east-1
# DB_VAULT_S3_ENDPOINT_URL=             # For S3-compatible services (MinIO, etc.)
# AWS credentials use the standard boto3 chain:
#   AWS_ACCESS_KEY_ID=
#   AWS_SECRET_ACCESS_KEY=

# ─────────────── Notifications (optional) ────────────────
# DB_VAULT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00/B00/xxx

# ─────────────── Compression ─────────────────────────────
# DB_VAULT_COMPRESSION=zstd            # zstd | gzip | lz4 | none
# DB_VAULT_COMPRESSION_LEVEL=3

# ─────────────── Logging ─────────────────────────────────
# DB_VAULT_LOG_LEVEL=INFO
# DB_VAULT_LOG_FILE=~/.local/share/db-vault/logs/db-vault.log
# DB_VAULT_LOG_FORMAT=console           # console | json
